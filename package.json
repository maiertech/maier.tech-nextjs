{
  "name": "maier.tech",
  "version": "0.0.0",
  "private": true,
  "author": "Thilo Maier <git@maier.asia>",
  "homepage": "https://maier.tech",
  "scripts": {
    "dev": "next dev",
    "dev:watch": "next-remote-watch ./content/**/*.mdx",
    "build": "next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "prepare": "husky install",
    "format": "prettier . --ignore-path .gitignore --write",
    "test": "npm run test:types && npm run test:eslint && npm run test:prettier",
    "test:eslint": "eslint . --ignore-path .gitignore",
    "test:prettier": "prettier . --ignore-path .gitignore --check",
    "test:types": "tsc"
  },
  "dependencies": {
    "@headlessui/react": "^1.2.0",
    "@mdx-js/loader": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "@next/mdx": "^10.2.3",
    "@sindresorhus/slugify": "^1.1.2",
    "@tailwindcss/typography": "^0.4.1",
    "fathom-client": "^3.0.0",
    "glob": "^7.1.7",
    "gray-matter": "^4.0.3",
    "luxon": "^1.27.0",
    "mdx-prism": "^0.3.3",
    "next": "^10.2.3",
    "next-mdx-remote": "^3.0.2",
    "next-remote-watch": "^1.0.0",
    "next-seo": "^4.24.0",
    "next-sitemap": "^1.6.105",
    "postcss": "^8.3.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rehype": "^11.0.0",
    "remark-code-titles": "^0.1.2",
    "tailwindcss": "^2.1.4"
  },
  "devDependencies": {
    "@maiertech/eslint-config": "^3.0.0",
    "@maiertech/prettier-config": "^1.0.1",
    "@types/glob": "^7.1.3",
    "@types/luxon": "^1.27.0",
    "@types/react": "^17.0.11",
    "autoprefixer": "^10.2.6",
    "eslint": "^7.28.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "npm-check": "^5.9.2",
    "prettier": "^2.3.1",
    "typescript": "^4.3.2"
  },
  "eslintConfig": {
    "extends": "@maiertech",
    "rules": {
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index",
            "object",
            "type"
          ],
          "pathGroups": [
            {
              "pattern": "@/types/**",
              "group": "type"
            },
            {
              "pattern": "@/**",
              "group": "external",
              "position": "after"
            }
          ],
          "pathGroupsExcludedImportTypes": [
            "internal"
          ],
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc"
          }
        }
      ],
      "jsx-a11y/anchor-is-valid": "off"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,json,md,mdx,ts,tsx,yml}": "prettier --write"
  },
  "prettier": "@maiertech/prettier-config"
}
